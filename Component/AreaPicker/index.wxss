.area-picker-mask {
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.5);
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 20;
}

.hide {
    display: none;
}

.show {
    display: block;
    opacity: 0;
    animation: show 0.3s ease-in-out forwards;
}

@keyframes show {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

.area-picker-view {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #fff;
    z-index: 21;
}

.area-picker-view-btns {
    background-color: #fff;
    border-bottom: 1px solid #eee;
    font-size: 30rpx;
    padding: 18rpx 0rpx;
}

.area-picker-view-btns .cancle {
    color: #939393;
    padding-right: 20rpx;
    padding-left: 25rpx;
}

.area-picker-view-btns .sure {
    float: right;
    padding-left: 20rpx;
    padding-right: 25rpx;
}

.area-picker-view-btns .view {
    height: 180px;
    width: 100%;
}

.area-picker-view-btns .view .colum {
    line-height: 35px;
    text-align: center;
    font-size: 28rpx;
}

